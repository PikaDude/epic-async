{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "outDir": "./dist",
        "declaration": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}