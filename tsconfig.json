{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}